    </head>
    <body>
        <%- include('../particles/navbar') %> <br><br>
        <hr />

        <div class="container">
            <div class="row pt-2 m-1">
                <% if(typeof item[0] !== 'undefined'){ %>
                <% item.forEach(function(item){ %>
                    <div class="col col-md-3 d-flex justify-content-center">
                        
                        <a href="/detail/<%= item.pname %>">
                          
                <div class="m-3 p-2"   style="border: 1px solid rgb(172, 163, 163) ;border-radius: 20px; width: 200px;" >
                    <img src="/uploads/<%= item.pimage %>" alt="..." style="height: 180px; width: 180px; border-radius: 50px;" />
                        
                        <p style="font-size: small;"  > <%= item.pname %></p>
                        <p>price:<%= item.price %></p>
                        <center>
                        <form action="/cartRemove/<%= item.id %>" method="POST" style="position: absolute; top: -5px;right: 15px;">
                            <input class="btn btn-outline-dark" type="image" src="images/close.png" width="50px" height="40px" style="border: none;">
                        </form></center>
                </div>
            </a>
           </div>
            
                <% }) %>
            </div>
                <form action="/cart-checkout" method="POST" >
                    <input type="submit" class="btn btn-dark ml-5" value="check out">
                </form>
                <% }else{ %>
                    <h1 style="position: absolute; top: 50%; left: 40%; opacity: 50%;" >no item in cart</h1>
                <% } %>
            </div>
            </div>
        
