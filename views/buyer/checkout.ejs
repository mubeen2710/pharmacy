    <body class="md-font">
        <%- include('../particles/navbar') %> <br><br>
        <hr />
        <center>
            <h3>Confirm Order</h3>
        </center>
        <div class="bu container">
            <% if(typeof message !=='undefined' ){ %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
              </div>
              <% } %>
            <div class="row">
                <div class="col-2">
                    <h3>Address:-</h3>
                </div>
                <div class="col-4">
                    <p class="p">
                       <%= user[0].add1  %> <br>
                       <%= user[0].add2  %> <br>
                       <%= user[0].add3  %> <br>
                       
                    </p>
                </div>
                <div class="col-6">
                    <% item.forEach(function(item){ %>
                        <p><%= item.pname %><span style="float: right;"><%= item.price %></span></p>
                        
                        <% }) %>
                    
        </div>
        </div>
            <div class="row mt-5">
                <div class="col-4"></div>
                <div class="col-6">
                    
                    <p>Amount Payable:- <span><%= price %></span> </p>
                    
                    <label>payment options</label>
                    <select id="">
                        <option>Net Banking</option>
                        <option>UPI</option>
                        <option>Debit/Credit Card</option>
                        <option>COD</option>
                    </select>
                    <br />
                    <form action="/checkout" method="POST">
                
                <input type="submit" value="buy" class="btn btn-dark ml-lg-2">
            </form>
                </div>
            </div> 
        </div> 
