        <title>Pharmacy Website</title>
    </head>
    <body>
        <%- include('../particles/navbar') %> <br><br>
        <hr />
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
        <a class="btn btn-light dash m-2  " href="/sellerDashboard" style="width: 200px;" > new orders</a> <br>  
        <a class="btn btn-light dash m-2 active"  style="width: 200px;"> Products currently listing</a> <br>
        <a class="btn btn-light dash m-2" href="/paymentsummary" style="width: 200px;">payment summary</a> <br>
        <a class="btn btn-light dash m-2" href="/sellerorderhistory" style="width: 200px;">order history</a> <br>
        <a class="btn btn-light dash m-2" href="/seller/profile" style="width: 200px;">Seller Profile</a> 
       </div>
       <div class="col-10">
           
           
        <% item.forEach(function(item){ %>
        <div >
            <div class="row">
             <div class="col-3">
            <img style="float: left;" width="150px" height="150px" src="/uploads/<%= item.pimage %>"  />
        </div>  
            <div class="col-4 py-3" style="float: right;">
                <p > <%= item.pname %> </p>
                <p>stock: <%= item.stock %></p>
                <p>price: <%= item.price %></p>
            </div>
            <div class="col-3">
                <form action="stock/<%= item.pname %>" method="POST">
                    <h5>Add Stock</h5>
                    <input type="number" name="qty">
                    <input type="submit" class=" btn-dark" style="position: absolute;right: 0px;" value="Add">
                </form> <br>
                <form action="/editProducts/<%= item.pname %>">
                    <input class="btn btn-outline-dark" type="submit" value="Edit Details" style="width: 100%;">
                </form>
            </div>
            </div> 
        </div>
        <% }) %>
          
           <div class="row mx-5">
            <a href="/add" style="width:500px ;" class="btn btn-outline-dark">Add</a>
           </div>
    
       </div>
    </div>
            </div>
           <br><br>
